/* pages/application/application.wxss */
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  /* border-radius: 50%; */
}

.userinfo-nickname {
  color: #aaa;
  font-weight: initial;
  margin-bottom: 100px;
}

.userinfo {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/**-------**/

.scrollView {
  width: 100%;
  height: 100%;
  background-color: white;
}

.dangerView {
  display:flex;
  flex-direction:row;
  width: 90%;
  height: 80px;
  background: linear-gradient(to right, #1C8DE1 , #59E2F3);
  margin-top: 10px;
  border-color: #D9E5F0;
  border-width: 1px;
  border-radius: 10px;
  border-style: solid;
  align-items:center;/*垂直居中*/
  
}

.comingView {
  display:flex;
  flex-direction:column;
  background-color: #E7E7E7;
  align-items:center;/*垂直居中*/
  justify-content: center;/*水平居中*/
}

.comingText {
  font-size: 16px;
  color: #aaa;
  font-weight: 300;
  text-align: center;
}

.titleImage{
  width: 100%; 
}

.dangerIcon {
  width: 45px;
  margin-left: 10px;
}

.subView {
  display:flex;
  flex-direction:column;
  height: 80%;
  justify-content: center;/*水平居中*/
}

.dangerText {
  font-size: 16px;
  color: white;
  font-weight: 300;
  margin-left: 20px;
}

.subText {
  font-size: 14px;
  color: #E7E7E7;
  font-weight: 200;
  margin-left: 20px;
  margin-top: 5px;
}