/**index.wxss**/
.baseView {
  position: fixed;
  height: 100%;
  width: 100%;
  display:flex;
  flex-direction:column;
  /*垂直居中*/
   align-items:center; 
  /*水平居中*/
   justify-content: center; 
}

.subBaseView {
  height: 144px; 
  width: 100%;
  display:flex;
  flex-direction:column;
  margin-top: 0px;
}

.subBaseView2 {
  position: absolute; 
  height: 20px; 
  width: 100%;
  justify-content: center; 
  bottom: 0px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.add {
  position: absolute; 
  justify-content: center; 
  align-items: center;
  bottom: 5px;
  width: 50px;
  height: 50px;
  /* margin-top: -25px; */
}

.locationView {
  height: 100%;
  width: 100%;
  justify-content: center; 
  align-items: center;
}

.location {
  background-color:rgba(0,0,0,0.5);
  display: block;
  font-size:12px;
  color: white;
  font-weight: 300;
  line-height: 20px;
  height: 20px;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
  text-align: center;
}

.map_container{
  width: 100%;
}
.map{
  width: 100%;
  height: 100%;
}

.scrollView {
  width: 100%;
  height: 100%;
  background-color: white;
}

.scrollItem {
  display:flex;
  flex-direction:row;
  width: 100%;
  height: 48px;
  background-color: white;
  /* margin-bottom: 10px; */
  border-bottom: 1rpx solid #D3D3D3;
  align-items:center;/*垂直居中*/
}

.mainImage {
  width: 100%;
}

.cellText1 {
  font-size: 14px;
  color: #696969;
  width: 100%;
}
.cellText2 {
  font-size: 14px;
  color: #696969;
  margin-right: 20px;
  width: 100%;
  text-align: right;
}

.point {
  width: 24px;
  height: 24px;
  margin: 20rpx;
}