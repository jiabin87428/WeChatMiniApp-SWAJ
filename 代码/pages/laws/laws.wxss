.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  /* border-radius: 50%; */
}

.userinfo-nickname {
  color: #aaa;
  font-weight: initial;
  margin-bottom: 100px;
}

.userinfo {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/**-------**/

.scrollView {
  width: 100%;
  height: 100%;
  background-color: white;
}

.dangerView {
  display:flex;
  flex-direction:row;
  width: 90%;
  height: 80px;
  background-color: white;
  margin-top: 10px;
  border-color: #D9E5F0;
  border-width: 1px;
  border-radius: 10px;
  border-style: solid;
  align-items:center;/*垂直居中*/
  
}

.titleImage{
  width: 100%; 
}

.dangerIcon {
  width: 45px;
  margin-left: 10px;
}

.subView {
  display:flex;
  flex-direction:column;
  height: 80%;
  justify-content: center;/*水平居中*/
}

.dangerText {
  font-size: 16px;
  color: #256FBD;
  margin-left: 20px;
}

.subText {
  font-size: 14px;
  color: #767676;
  margin-left: 20px;
  margin-right: 10px;
  margin-top: 5px;
}