/* pages/check/editPage.wxss */
.baseView {
  position: fixed;
  height: 100%;
  width: 100%;
  display:flex;
  flex-direction:column;
}

.subView {
  width: 100%;
  display:flex;
  flex-direction:column;
}

.titleLabel {
  width: 100%;
  height: 30px;
  background-color: #EBEBEB;
  color: #696969;
  font-size: 14px;
  font-weight: 300;
  line-height: 30px;
  text-indent: 16px;
}

.item {
  display:flex;
  flex-direction:row;
  width: 100%;
  background-color: white;
  /* margin-bottom: 10px; */
}

.radio-group {
  display:flex;
  flex-direction:column;
  width: 100%;
  margin-left: 20px;
  margin-right: 20px;
}

.line {
  width: 100%;
  height: 1px;
  border-bottom: 1rpx solid #EBEBEB;
}

.radio {
  width: 100%;
  height: 100%;
  font-size: 16px;
  font-weight: 300;
  line-height: 48px;
}

.pickView {
  width: 100%;
  height: 48px;
}

.picker {
  width: 100%;
  height: 48px;
  font-weight: 300;
  font-size: 16px;
  line-height: 48px;
  margin-left: 20px;
}

.submitButton {
  width: 90%;
  height: 48px;
  margin-top: 10px;
  margin-bottom: 10px;
  background-color: #0B6BD9;
  color: white;
}