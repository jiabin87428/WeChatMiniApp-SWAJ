/* pages/me/me.wxss */
.baseView {
  position: fixed;
  height: 100%;
  width: 100%;
  display:flex;
  flex-direction:column;
  align-items:center;/*垂直居中*/
  justify-content: center;/*水平居中*/
}

.scrollView {
  width: 100%;
  height: 100%;
  background-color: white;
}

.scrollItem {
  display:flex;
  flex-direction:row;
  width: 100%;
  height: 48px;
  background-color: white;
  /* margin-bottom: 10px; */
  border-bottom: 1rpx solid #D3D3D3;
  align-items:center;/*垂直居中*/
}

.cellText1 {
  font-size: 14px;
  color: #696969;
  margin-left: 10px;
  margin-right: 5px;
  width: 100px;
}

.cellText2 {
  font-size: 14px;
  color: #B5B5B5;
  margin-left: 10px;
  margin-right: 5px;
  width: 100%;
  display: -webkit-box;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:10;
  overflow: hidden;
  text-overflow:ellipsis;
}

.arrow {
  width: 10px;
  height: 58px;
  margin-right: 16px;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  /* border-radius: 50%; */
}

.userinfo-nickname {
  color: #aaa;
  font-weight: initial;
}

.userinfo {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.submitButton {
  width: 90%;
  height: 48px;
  margin-top: 10px;
  background-color: #0B6BD9;
  color: white;
}