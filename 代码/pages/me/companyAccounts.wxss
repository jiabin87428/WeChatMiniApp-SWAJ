/* pages/me/companyAccounts.wxss */
.baseView {
  height: 100%;
  width: 100%;
  display:flex;
  flex-direction:column;
  align-items:center;/*垂直居中*/
  justify-content: center;/*水平居中*/
}

.scrollView {
  width: 100%;
  /* height: 100%; */
  background-color: white;
}

.subscrollBG {
  display:flex;
  flex-direction: row;
  width: 100%;
  background-color: white;
  z-index: 1;
}

.subscrollItem {
  display:flex;
  flex-direction: column;
  width: 100%;
  background-color: white;
  justify-content: center;/*水平居中*/
  z-index: 1;
}

.dangerText {
  font-size: 15px;
  color: #6D6D6D;
}

.subText {
  font-size: 12px;
  color: #AFAFAF;
  margin-left: 15px;
  margin-right: 5px;
  /* width: 100%; */
  display: -webkit-box;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:10;
  overflow: hidden;
  text-overflow:ellipsis;
}

.scrollButtonItem {
  display:flex;
  flex-direction:row;
  width: 100%;
  height: 70px;
  background-color: white; 
  align-items:center;/*垂直居中*/
}

.submitButton {
  background-color: #0B6BD9;
  color: white;
  width: 90%;
  height: 48px;
  margin-top: 10px;
}

.scrollItem {
  display:flex;
  flex-direction:row;
  width: 100%;
   height: 58px; 
  background-color: white; 
  border-bottom: 1rpx solid #D3D3D3;
  align-items:center;/*垂直居中*/
}

.cellText2 {
  font-size: 14px;
  color: #696969;
  margin-left: 20px;
  margin-right: 5px;
  width: 100%;
  display: -webkit-box;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:10;
  overflow: hidden;
  text-overflow:ellipsis;
}