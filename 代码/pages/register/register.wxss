/* pages/register/register.wxss */
.baseView {
  position: fixed;
  height: 100%;
  width: 100%;
  display:flex;
  flex-direction:column;
  align-items:center;/*垂直居中*/
  /*justify-content: center;/*水平居中*/
}

.inputView {
  display: flex;
  flex-direction: row;
  background-color: white;
  width: 100%;
  height: 40px;
  align-items:center;/*垂直居中*/
  justify-content: center;/*水平居中*/
  margin-bottom: 1px;
}

.buttonView {
  display: flex;
  flex-direction: row;
  justify-content: center;/*水平居中*/
  width: 100%;
  height: 50px; 
}

.text {
  width: 150px;
  /* height: 100%; */
  text-align:  center;
  line-height: 40px; /*垂直居中*/ 
  font-weight: initial;
  font-size: 14px;
}

.input {
  /* background-color: red; */
  margin-left: 10px;
  width: 90%;
  height: 100%;
  font-size: 14px; 
}

.registerButton {
  width: 90%;
  height: 40px;
  margin: 10px; 
}

.selectedView {
  height: 30px;
  width: 100px;
   display: grid;
  flex-direction:column; 
  align-items:center;/*垂直居中*/
  justify-content: center;/*水平居中*/
  background: green;
}

.unSelectedView {
  height: 30px;
  width: 100px;
   display: grid;
  flex-direction:column; 
  align-items:center;/*垂直居中*/
  justify-content: center;/*水平居中*/
  background: white;
}

.selectedText {
  width: 100%;
  height: 20px;
  font-size: 14px;
  color: white;
}