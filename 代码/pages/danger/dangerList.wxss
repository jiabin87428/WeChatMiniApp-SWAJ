  border-bottom: 2rpx solid #777777;    
  text-align: center;    
  line-height: 80rpx;  
}    
.swiper-tab-list{  
  font-size: 30rpx;    
  display: inline-block;    
  width: 20%;    
  color: #777777;    
}    
