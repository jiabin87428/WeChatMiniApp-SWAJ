/* pages/danger/dangerCheckList.wxss */
.baseView {
  height: 100%;
  width: 100%;
  display:flex;
  flex-direction:column;
  align-items:center;/*垂直居中*/
  justify-content: center;/*水平居中*/
}

.scrollView {
  width: 100%;
  /* height: 100%; */
  background-color: white;
}

.dangerView {
  display:flex;
  flex-direction:row;
  width: 100%;
  height: 60px;
  background-color: white;
  border-bottom: 1rpx solid #D8D8D8;
  margin-left: 20px;
  align-items:center;/*垂直居中*/
  
}

.titleImage{
  width: 100%; 
}

.dangerIcon {
  width: 35px;
  /* margin-left: 10px; */
}

.subView {
  display:flex;
  flex-direction:column;
  height: 80%;
  justify-content: center;/*水平居中*/
}

.dangerText {
  font-size: 15px;
  color: #6D6D6D;
  margin-left: 15px;
}

.subText {
  font-size: 12px;
  color: #AFAFAF;
  margin-left: 15px;
  margin-top: 5px;
}

.typeView {
  display:flex;
  flex-direction:column;
  align-items:center;/*垂直居中*/
  justify-content: center;/*水平居中*/
}

.typeText {
  position: absolute;
  font-size: 8px;
  font-weight: 200;
  color: #FFFFFF;
  align-items:center;/*垂直居中*/
  justify-content: center;/*水平居中*/
}

.searchView {
  display:flex;
  flex-direction:row;
  background-color: white;
  width: 100%;
  height: 40px;
  align-items:center;/*垂直居中*/
  border-bottom: 1rpx solid #D8D8D8;
}

.searchIcon {
  width: 20px;
  margin-left: 20px;
}

.searchInput {
  width: 100%;
  height: 100%;
  font-size: 14px;
  margin-left: 10px;
}