/**index.wxss**/
.baseView {
  position: fixed;
  height: 100%;
  width: 100%;
  display:flex;
  flex-direction:column;
  align-items:center;/*垂直居中*/
  justify-content: center;/*水平居中*/
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  /* border-radius: 50%; */
}

.userinfo-nickname {
  color: #aaa;
  font-weight: initial;
  margin-bottom: 100px;
}

.userinfo {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.dangerView {
  display:flex;
  flex-direction:row;
  width: 80%;
  height: 80px;
  background-color: white;
  margin-top: 10px;
  border-color: #C0C0C0;
  border-width: 1px;
  border-radius: 10px;
  border-style: dashed;
  align-items:center;/*垂直居中*/
  
}

.dangerIcon {
  width: 25px;
  height: 25px;
  margin-left: 30px;
}

.dangerText {
  font-size: 16px;
  color: #696969;
  margin-left: 20px;
}