.baseView {
  position: fixed;
  height: 100%;
  width: 100%;
  display:flex;
  flex-direction:column;
  align-items:center;/*垂直居中*/
  justify-content: center;/*水平居中*/
}

.scrollView {
  width: 100%;
  height: 100%;
  background-color: #D3D3D3;
}

.scrollItem {
  display:flex;
  flex-direction:row;
  width: 100%;
  height: 58px;  
  background-color: white; 
  border-bottom: 1rpx solid #D3D3D3;
  align-items:center;/*垂直居中*/
}

.cellText1 {
  font-size: 14px;
  color: #696969;
  margin-left: 10px;
  margin-right: 5px;
  width: 100%;
}

.radio {
  margin-right: 10px;
}

.buttonView {
  display:flex;
  flex-direction:row;
  width: 100%;
  height: 65px;
  background-color: white;
}

.submitButton {
  background-color: #0B6BD9;
  color: white;
  width: 90%;
  margin-top: 10px;
  height: 48px;
}