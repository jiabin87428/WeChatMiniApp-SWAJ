/* pages/common/chooseLocation.wxss */
.baseView {
  position: fixed;
  height: 100%;
  width: 100%;
  display:flex;
  flex-direction:column;
  /*垂直居中*/
   align-items:center; 
  /*水平居中*/
   justify-content: center; 
}

.searchView {
  display:flex;
  flex-direction:row;
  background-color: white;
  width: 100%;
  height: 40px;
  align-items:center;/*垂直居中*/
  border-bottom: 1rpx solid #D8D8D8;
}

.searchIcon {
  width: 20px;
  margin-left: 20px;
}

.searchInput {
  width: 100%;
  height: 100%;
  font-size: 14px;
  margin-left: 10px;
}

.map_container{
  width: 100%;
}
.map{
  width: 100%;
  height: 100%;
}

.location {
  background-color:rgba(0,0,0,0.5);
  display: block;
  font-size:12px;
  color: white;
  font-weight: 300;
  line-height: 20px;
  height: 20px;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
  text-align: center;
}