.baseView {
  height: 100%;
  width: 100%;
  display:flex;
  flex-direction:column;
  align-items:center;/*垂直居中*/
  justify-content: center;/*水平居中*/
}

.searchView {
  display:flex;
  flex-direction:row;
  background-color: white;
  width: 100%;
  height: 40px;
  align-items:center;/*垂直居中*/
  border-bottom: 1rpx solid #D8D8D8;
}

.searchIcon {
  width: 20px;
  margin-left: 20px;
}

.searchInput {
  width: 100%;
  height: 100%;
  font-size: 14px;
  margin-left: 10px;
}

.filterText {
  width: 100px;
  height: 100%;
  font-size: 14px;
  line-height: 40px;
  color: deepskyblue;
  background-color: aliceblue;
  text-align: center;
}

.scrollView {
  width: 100%;
